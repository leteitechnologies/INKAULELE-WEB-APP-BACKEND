model TravelPack {
  id         String   @id @default(uuid())
  bookingId  String   @unique
  publicId   String   // cloudinary/s3 public id
  filename   String?
  uploadedAt DateTime @default(now())
  emailedAt  DateTime?
  createdAt  DateTime @default(now())

  booking    Booking  @relation(fields: [bookingId], references: [id])

  @@index([publicId])
}

model SupplierVoucher {
  id           String   @id @default(uuid())
  bookingId    String
  supplierId   String
  supplierName String?
  supplierType String?   // "hotel" | "transfer" | "guide" | "activity"
  supplierRef  String?   // supplier-side reference / supplier id
  publicId     String   @unique   // cloudinary/s3 public id
  filename     String?
  uploadedAt   DateTime  @default(now())
  emailedAt    DateTime?
  contactJson  Json?     // { phone, email, address } for quick supplier access
  createdAt    DateTime  @default(now())

  booking      Booking   @relation(fields: [bookingId], references: [id])
  supplier     Supplier  @relation(fields: [supplierId], references: [id])

  @@index([bookingId])
  @@index([publicId])
  @@index([supplierId])
}

// new model: Receipt (one-to-one with booking)
model Receipt {
  id           String   @id @default(uuid())
  bookingId    String   @unique
  publicId     String   // cloudinary public id (raw/private)
  filename     String?
  uploadedAt   DateTime @default(now())
  emailedAt    DateTime?
  createdAt    DateTime @default(now())

  booking      Booking  @relation(fields: [bookingId], references: [id])

  @@index([publicId])
}


// new model: Voucher (one-to-one with booking)
model Voucher {
  id           String   @id @default(uuid())
  bookingId    String   @unique
  publicId     String   // cloudinary public id (raw/private)
  filename     String?
  uploadedAt   DateTime @default(now())
  emailedAt    DateTime?
  createdAt    DateTime @default(now())

  booking      Booking  @relation(fields: [bookingId], references: [id])

  @@index([publicId])
}


model ItineraryItem {
  id                  String      @id @default(uuid())
  experience          Experience? @relation(fields: [experienceId], references: [id])
  experienceId        String?
 destination   Destination? @relation(fields: [destinationId], references: [id], onDelete: Cascade)
  destinationId       String?
  day                 Int?
  time                String?
  title               String
  description         String?
  durationMinutes     Int?
  applicableDurations String[]    @default([])
  mealIncluded        Boolean     @default(false)
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt

  @@index([destinationId])
  @@index([experienceId])
}

// --- Supplier: generic partner table for hotels, transfer companies, guides etc.
model Supplier {
id String @id @default(uuid())
name String
type SupplierType @default(OTHER)
phone String?
email String?
website String?
address String?
lat Float?
lng Float?
notes String?
createdAt DateTime @default(now())
updatedAt DateTime @default(now()) @updatedAt


// relations
rooms Room[]
vouchers SupplierVoucher[]
accommodationBookings Booking[] @relation("SupplierToBooking")
}


// --- Room: hotel room inventory
model Room {
id String @id @default(uuid())
supplierId String
code String? // hotel room code / SKU
title String
roomType String? // e.g. Twin, Double, Suite
capacity Int @default(2)
inventory Int? // how many rooms of this type
priceFrom Float?
currency String? @default("KES")
amenities String[] @default([])
createdAt DateTime @default(now())
updatedAt DateTime @default(now()) @updatedAt


supplier Supplier @relation(fields: [supplierId], references: [id])
bookings Booking[]
@@index([supplierId])
}


// --- Pickup / Transfer details (one per booking)
model Pickup {
  id             String       @id @default(uuid())
  bookingId      String       @unique
  type           PickupType
  provider       PickupProvider
  vehicleType    VehicleType?
  providerName   String?      // e.g. "Lamu Transfers Ltd" or "Uber"
  contactPhone   String?
  contactEmail   String?
  pickupAt       DateTime?    // scheduled pickup time (local)
  flightNumber   String?
  airline        String?
  terminal       String?
  pickupAddress  String?
  pickupLat      Float?
  pickupLng      Float?
  notes          String?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  booking        Booking      @relation(fields: [bookingId], references: [id])
}



model Gallery {
  id            String      @id @default(uuid())
  destinationId String?     // <-- made nullable
  experienceId  String?
  imageUrl      String
  alt           String?     // accessibility text (long)
  shortAlt      String?     // short alt text (new)
  title         String?     // friendly title
  caption       String?     // human caption / description (added)
  tags          String[]    @default([]) // simple tags array
  category      String?     // "Safari", "Culture", etc
  publicId      String?     // cloudinary / storage public id (optional)
  width         Int?        // image width in px (optional)
  height        Int?        // image height in px (optional)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @default(now()) @updatedAt
  groupId       String?     // e.g. "g1" for grouped sets
  featured      Boolean     @default(false)
  order         Int         @default(0)

  experience    Experience? @relation(fields: [experienceId], references: [id])
  destination   Destination? @relation(fields: [destinationId], references: [id], onDelete: Cascade)

  @@index([destinationId])
  @@index([order])
}



model Subscriber {
  id             String           @id @default(uuid())
  email          String           @unique
  name           String?
  status         SubscriberStatus @default(PENDING)
  verified       Boolean          @default(false)
  verifyToken    String?          @unique
  unsubToken     String?          @unique
  source         String?          // e.g. "site:cta-home"
  createdAt      DateTime         @default(now())
  verifiedAt     DateTime?
  unsubscribedAt DateTime?
  lastSentAt     DateTime?
  notes          String?
  campaignRecipients CampaignRecipient[]

}
model ContactRequest {
  id         String   @id @default(uuid())
  hostType   String?  // "experience" | "destination" or null for generic
  hostId     String?  // experience.id or destination.id or slug
  hostName   String?  // friendly host name (optional)
  name       String?
  email      String?
  phone      String?
  reason     String?    // <-- new
  priority   String?    // <-- new
  message    String
  ipHash     String?   // sha256 of IP for privacy
  userAgent  String?
  resolved   Boolean   @default(false)
  createdAt  DateTime  @default(now())
  viewed     Boolean   @default(false)   // <-- new
