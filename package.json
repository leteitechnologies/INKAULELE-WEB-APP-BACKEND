{
  "name": "@app/api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nest start --watch",
    "build": "nest build",
    "vercel-build": "npm run prisma:generate && npm run build",
    "start": "nest start",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:dev:unix": "NODE_OPTIONS=--max-old-space-size=4096 nest start --watch --host 0.0.0.0",
    "start:dev:win": "set NODE_OPTIONS=--max-old-space-size=4096&& nest start --watch --host 0.0.0.0",
    "start:debug": "nest start --debug --watch --host 0.0.0.0",
    "worker:dev": "ts-node -r tsconfig-paths/register worker/bootstrap-worker.ts",
    "worker:build": "tsc",
    "worker:prod": "node dist/worker/bootstrap-worker.js",
    "build-and-run-worker": "npm run worker:build && npm run worker:prod",
    "start:prod": "node dist/main",
    "seed": "ts-node src/prisma/seed.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "postinstall": "npm run prisma:generate"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.0",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/throttler": "^6.4.0",
    "@prisma/client": "6.18.0",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.61.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cloudinary": "^2.7.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "execa": "^9.6.0",
    "express": "^5.1.0",
    "geoip-lite": "^1.4.10",
    "handlebars": "^4.7.8",
    "ioredis": "^5.8.1",
    "nanoid": "^3.3.11",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.9",
    "p-limit": "^3.1.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pdf-lib": "^1.17.1",
    "puppeteer": "^24.23.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "sanitize-html": "^2.17.0",
    "streamifier": "^0.1.1",
    "stripe": "^19.2.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@nestjs/schematics": "^11.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/geoip-lite": "^1.4.4",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.24",
    "@types/node-fetch": "^2.6.13",
    "@types/nodemailer": "^7.0.2",
    "@types/passport-jwt": "^4.0.1",
    "@types/sanitize-html": "^2.16.0",
    "@types/streamifier": "^0.1.2",
    "eslint": "^8.57.1",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "prisma": "6.18.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.46.3"
  }
}
